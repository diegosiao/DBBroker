    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: DbBroker CLI Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build CLI",
            "program": "${workspaceFolder}/src/DbBroker.Cli/bin/Debug/net8.0/DbBroker.Cli.dll",
            "args": [
                "sync"
            ],
            "cwd": "${workspaceFolder}/src/DbBroker.Cli",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "C#: DbBroker Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build Showcase CLI",
            "program": "${workspaceFolder}/src/DbBroker.Showcase.Cli/bin/Debug/net8.0/DbBroker.Showcase.Cli.dll",
            "args": [
                "sync"
            ],
            "cwd": "${workspaceFolder}/src/DbBroker.Showcase.Cli",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}