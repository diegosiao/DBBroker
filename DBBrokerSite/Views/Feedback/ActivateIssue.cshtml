@using DBBrokerSite.Models
@model ActivateIssueViewModel

@{ 
    ViewBag.Title = Model.Title;
}

<style>
    .table-hover > tbody > tr:hover {
        background-color: #e5e5e5 !important;
        cursor: pointer;
    }
</style>

<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-9">
        <p><h2><small>@Model.TxSubtitle</small></h2></p>
        @Html.ActionLink("Back to home", "Index", "Home")
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <p>&nbsp;</p>
    </div>
</div>
<div class="row">
    <div class="col-md-1">
        <h4><strong>@Model.TxTitle</strong></h4>
    </div>
    <div class="col-md-6">
        <h4>@Model.Issue.Title</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-1">
        <strong>@Model.TxDescription</strong>
    </div>
    <div class="col-md-6">
        @Model.Issue.Description
    </div>
</div>